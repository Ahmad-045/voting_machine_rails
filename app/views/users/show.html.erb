<h3>Candidate Details</h3>
<div class="row">
  <% if @user.avatar.attached? %>
    <div class="col-4 user_image">
      <%= image_tag @user.avatar, :style => "width: 200px;"%>
    </div>
  <% else %>
    <p>No profile Image</p>
  <% end %>
    <div class="col-8 user_details">
      <p><strong>Name: </strong> <%= @user.name %></p>
      <p><strong>Email: </strong> <%= @user.email %></p>
      <p><strong>CNIC: </strong> <%= @user.cnic %></p>
      <p><strong>Halka: </strong> <%= extract_halka_name(@user.halka_id) %></p>
      <p><strong>Party Name: </strong> <%= extract_party_name(@user.id) %></p>
    </div>

    <%= link_to 'Cast Vote', add_vote_path , class: 'btn btn-primary' ,data: {confirm: 'Are you sure, This action is irreversiable'}%>
</div>
