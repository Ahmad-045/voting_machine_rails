<h3>List of All Halkas</h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Halka ID</th>
      <th scope="col">Name</th>
      <th scope="col">Delete Halka</th>
    </tr>
  </thead>
  <tbody>
    <% @halkas.each_with_index do |halka, index| %>
      <tr>
        <th><%= halka.id %></th>
        <td><%= halka.name %></td>
        <td><%= link_to 'Delete', halka_path(halka.id), method: :delete, class: 'btn btn-danger', data: { confirm: 'Deleting the Halka will also delete all of the voters data in that particular halka. Are You Sure..?'} %></td>
      </tr>
    <% end %>
    <%= paginate @halkas %>
  </tbody>
</table>

<%= link_to "Create New Halka", new_halka_path , class: "btn btn-primary text-white" if policy(User).index? %>
